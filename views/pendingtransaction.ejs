
<% layout('layout/layout') %>

<div class = "container">
    <h1>Pending Transaction</h1>
    <% if(txs && txs.length > 0) { %>
    <table class = 'table table-hover table-striped'>
        <thead>
            <tr>
                <th>#</th>
                <th>From</th>
                <th>To</th>
                <th>Amount</th>
                <th>Valid?</th>
            </tr>
        </thead>
        <tbody>
            <% txs.forEach((e1, idx) => {%>
                <tr>
                    <td><%= idx %></td>
                    <td class='text-truncate' style = 'max-width: 100px;'><%= e1.fromAddress %></td>
                    <td class='text-truncate' style = 'max-width: 100px;'><%= e1.toAddress %></td>
                    <td><%= e1.amount %></td>
                    <td></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    <% } %>

    <a href = '/blockchain/miningblock' class = 'btn btn-primary'>블록생성</a>
</div>
